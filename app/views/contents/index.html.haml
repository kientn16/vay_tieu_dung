.row
  .col-lg-12
    %h1.page-header Listing Contents
  .clear
  = render 'includes/flash_msg'
  / /.col-lg-12
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        = button_to 'New',new_content_path,class: 'btn btn-success',style: '',method: :get
      / /.panel-heading
      .panel-body
        .dataTable_wrapper
          %table#dataTables-example.table.table-striped.table-bordered.table-hover{:width => "100%"}
            %thead
              %tr
                %th Title
                %th Description
                %th Content
                %th Status
                %th Type
                %th{:colspan => "3"}
            %tbody
              - @contents.each do |content|
                %tr
                  %td= content.title
                  %td= content.description
                  %td= content.content
                  %td= content.status
                  %td= content.type
                  %td= link_to 'Edit', edit_content_path(content)
                  %td= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' }
        .text-center
          .pagination
            = will_paginate @contents, renderer: BootstrapPagination::Rails
