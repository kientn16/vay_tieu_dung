<div class="row">
  <div class="container">
    <%= form_for :user, url: post_active_code_path,:html => { :class => "form-horizontal frm-register" } do |f| %>
        <div class="heading text-center">
          <span class="text-bold text-center">Kích hoạt tài khoản</span>
        </div>
        <div class="invite-register text-center">
        	Xin mời bạn nhập mã để kích hoạt tài khoản
        </div>
        <div class="form-group">
        	<label for="input-email" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <%= f.text_field :email, :class => 'form-control text-control', :id => 'input-email', :required => 'required', :placeholder => 'Email' %>
          </div>
        </div>
        <div class="form-group">
        	<label for="input-code" class="col-sm-2 control-label">Mã kích hoạt</label>
			<div class="col-sm-10">
				<%= f.text_field :active_code, :class => 'form-control text-control',:id => 'input-code',:required => 'required', :placeholder => 'Mã kích hoạt' %>
			</div>
        </div>
        <div class="form-group text-center">
        	
          <%= f.submit "Kích hoạt", :class => 'btn btn-default btn-register' %>
        </div>
    <% end %>
  </div>
</div>