.row.banner-account
  .container.text-left
    .content
      %img{:src => ""}/
      = image_url('banner-account.png')
      "&gt;
.row
  .container
    .account
      / Nav tabs
      = render 'includes/nav_tab_account', active: 'account'
      / Tab panes
      .tab-content
        #tab-account.tab-pane.active{:role => "tabpanel"}
          .tab-content
            = form_for @user, html: {multipart: true,class: 'form-horizontal frm-account'} do |f|
              = render 'error_messages', object: @user
              = render 'includes/flash_msg'
              .row
                .col-sm-22
                  .form-group
                    %label.col-sm-6.control-label{:for => "input-email"} Email
                    .col-sm-30
                      - if @user.by_social == 0 || @user.change_email == 1
                        = f.text_field :email, :class => 'form-control', :disabled => 'disabled'
                      - else
                        = f.text_field :email, :class => 'form-control'
                .col-sm-14
                  .form-group
                    %label.col-sm-10.control-label{:for => "input-password"} M&#x1EAD;t kh&#x1EA9;u
                    .col-sm-26
                      = f.password_field :password, :class => 'form-control','placeholder' => 'Mật khẩu'
              .row
                .col-sm-22
                  .form-group
                    %label.col-sm-6.control-label{:for => "input-fullname"} H&#x1ECD; v&#xE0; t&#xEA;n
                    .col-sm-30
                      = f.text_field :name, :class => 'form-control','placeholder' => 'Họ và tên'
                .col-sm-14
                  .form-group
                    %label.col-sm-10.control-label{:for => "input-mobile"} Mobile
                    .col-sm-26
                      = f.text_field :phone, :class => 'form-control','placeholder' => 'Mobile'
              .row
                .col-sm-22
                  .form-group
                    %label.col-sm-6.control-label{:for => "input-birthday"} Ng&#xE0;y sinh
                    .col-sm-30
                      .row
                        .col-sm-8
                          %select.form-control{:name => "date[day]"}
                            %option{:value => ""} Day
                            - (1..31).each do |i|
                              %option
                              - if @day.to_i == i
                                = selected
                              value="#{i}"&gt;#{i}
                      .col-sm-14
                        .form-group
                          %label.col-sm-9.control-label{:for => "inputEmail3"} Th&#xE1;ng:
                          .col-sm-27
                            %select.form-control{:name => "date[month]"}
                              %option{:value => ""} Month
                              - (1..12).each do |i|
                                %option
                                - if @month.to_i == i
                                  = selected
                                value="#{i}"&gt;#{i}
                    .col-sm-14
                      .form-group
                        %label.col-sm-8.control-label{:for => "inputEmail3"} N&#x103;m:
                        .col-sm-28
                          %select.form-control{:name => "date[year]"}
                            %option{:value => ""} Year
                            - (Time.now.year - 100..Time.now.year).each do |i|
                              %option
                              - if @year.to_i == i
                                = selected
                              value="#{i}"&gt;#{i}
          .col-sm-14
        .row
          .col-sm-22
            .form-group
              %label.col-sm-6.control-label{:for => "input-birthday"} CMT
              .col-sm-30
                .row
                  .col-sm-23
                    = f.text_field :passport, :class => 'form-control','placeholder' => 'CMT/Passport'
                  .col-sm-13
                    = file_field_tag :document, :class => 'form-control'
          .col-sm-14
        .row
          .col-sm-22
            .form-group
              %label.col-sm-6.control-label{:for => "input-birthday"} Gi&#x1EDB;i t&#xED;nh:
              .col-sm-30
                .row
                  .col-sm-10
                    = f.select(:gender, [['Nam',1],['Nu',2]], {include_blank: Chon gioi tinh}, { :class => 'form-control'})
                  .col-sm-26
                    .form-group
                      %label.col-sm-16.control-label{:for => "inputEmail3"} T&#xEC;nh tr&#x1EA1;ng h&#xF4;n nh&#xE2;n:
                      .col-sm-20
                        = f.select(:marriage, [['Độc thân',0],['Đã lập gia đình',1]], {include_blank: 'Chon tinh trang hon nhan'}, { :class => 'form-control'})
          .col-sm-14
        .row.special
          .col-sm-36
            .form-group
              %label.col-sm-3.control-label{:for => "input-address"} &#x110;&#x1ECB;a ch&#x1EC9;
              .col-sm-33.input
                = f.text_field :address, :class => 'form-control',:pattern => '.{10,}', :title => '3 characters minimum', 'placeholder' => 'Địa chỉ'
          .col-sm-14
        .row.special
          .col-sm-36
            .form-group
              %label.col-sm-3.control-label.custom{:for => "inputEmail3"}
              .col-sm-33.input
                .row
                  .col-sm-10
                    .form-group
                      %label.col-sm-7.control-label{:for => "inputEmail3"} T&#x1EC9;nh/TP:
                      .col-sm-29
                        = f.select :provined_id, options_for_select(Province.where(parent_id: 0).map{ |c| [c.name, c.id] },@user.provined_id),{include_blank: 'Chọn Tỉnh/TP'}, { :class => 'form-control',:onchange => select_district(this.value,'#{post_select_district_path}') }
                  .col-sm-13
                    .form-group
                      %label.col-sm-10.control-label{:for => "inputEmail3"} Qu&#x1EAD;n/Huy&#x1EC7;n:
                      .col-sm-26
                        %select#data-district{:name => "user[district_id]", :onchange => "select_ward(this.value,'"}
                        = post_select_district_path
                        ')" class="form-control"&gt;
                        %option{:value => ""} Ch&#x1ECD;n Qu&#x1EAD;n/Huy&#x1EC7;n
                        - Province.where('parent_id=?',@user.provined_id).each do |district|
                          %option
                          - if @user.district_id.to_i == district.id.to_i
                            selected
                          value="#{district.id}"&gt;#{district.name}
              = @id_district
              .col-sm-13
                .form-group
                  %label.col-sm-10.control-label{:for => "inputEmail3"} Ph&#x1B0;&#x1EDD;ng/X&#xE3;:
                  .col-sm-26
                    %select#data-ward.form-control{:name => "user[ward_id]"}
                      %option{:value => ""} Ch&#x1ECD;n Ph&#x1B0;&#x1EDD;ng/X&#xE3;
                      - Province.where('parent_id=?',@user.district_id).each do |ward|
                        %option
                        - if @user.ward_id.to_i == ward.id.to_i
                          selected
                        value="#{ward.id}"&gt;#{ward.name}
  .row.special
    .col-sm-36
      .form-group
        %label.col-sm-3.control-label.custom{:for => "inputEmail3"}
        .col-sm-33.input
          .socials
            .heading.text-bold &#x110;&#x103;ng nh&#x1EAD;p nhanh
            .content
              %a{:href => "/auth/facebook", :style => "background-image: url("}
              = asset_path 'icon-facebook.png'
              )" class="icon icon-facebook"&gt;
            %a{:href => "/auth/google_oauth2", :style => "background-image: url("}
            = asset_path 'icon-gmail.png'
            )" class="icon icon-gmail"&gt;
        .hint Vui l&#xF2;ng click bi&#x1EC3;u t&#x1B0;&#x1EE3;ng Facebook/Gmail &#x111;&#x1EC3; &#x111;&#x103;ng k&#xFD; nhanh
      .button-submit
        = f.submit Cập nhật, :class => 'btn btn-default'
