<!-- app/views/users/new.html.erb -->
<div class="row">
  <div class="container">
    <%= form_for @user, url: post_register_path,:html => { :class => "form-horizontal frm-register" } do |f| %>
      <div class="heading text-center"><span class="text-bold text-center">Đăng ký tài khoản</span></div>
      <div class="invite-register text-center">Xin mời bạn nhập Email đăng ký tài khoản </div>
          <%= render 'includes/flash_msg', object: @user %>
          <% if @user.errors.any? %>
              <div class="alert alert-danger">
                The form contains <%= pluralize(@user.errors.count, "error") %>.
              </div>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
          <% end %>
          <div class="form-group">
            <%= label_tag(:email, "Email") %>
            <div class="col-sm-10">
              <%= f.text_field :email, :class => 'form-control text-control','id' => 'input-email','required' => 'required', 'placeholder' => 'Email' %>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "Đăng ký", :class => 'btn btn-default btn-register' %>
          </div>
    <% end %>
    <p class="hint-register text-center">Sau khi bạn đăng ký, chúng tôi sẽ gửi email đến địa chỉ của bạn. <br>
      Bạn vui lòng thực hiện theo hướng dẫn trong email để kích hoạt tài khoản. </p>
  </div>
</div>