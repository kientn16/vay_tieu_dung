%ul.nav.nav-tabs.text-center{:role => "tablist"}
  %li{:class => "#{(active.nil? || active == 'account') ? 'active' : ''} tab-account", :role => "presentation"}
    %a{:href => users_path}
      %span #{t('account')}
      %span.icon
  %li{:class => "#{(active == 'drawdown') ? 'active' : ''} tab-drawdown", :role => "presentation"}
    %a{:href => drawdowns_path()}
      %span #{t('drawdowns')}
      %span.icon
  %li{:class => "#{(active == 'info_account') ? 'active' : ''} tab-information", :role => "presentation"}
    %a{:href => info_index_path}
      %span #{t('info_account')}
      %span.icon
  %li{:class => "#{(active == 'notifications') ? 'active' : ''} tab-notification", :role => "presentation"}
    %a{:href => notifications_users_path()}
      %span #{t('notification')}
      %span.icon{"data-count" => "#{@numberNotification}"}
