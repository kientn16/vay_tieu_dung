<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listing Drawdowns</h1>
  </div>
  <div class="clear"></div>
  <%= render 'includes/flash_msg' %>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="panel panel-default">
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>Noi Lam viec</th>
              <th>Thoi han HDLD</th>
              <th>Chuc Vu</th>
              <th>Muc Luong</th>
              <th>So Tien Vay</th>
              <th>Thoi han Vay</th>
              <th>Muc dich vay</th>
              <th>User</th>
              <th colspan="2"></th>
            </tr>
            </thead>
            <tbody>
            <% @drawdowns.each do |drawdown| %>
                <tr>
                  <td><%= drawdown.sponsor_id %></td>
                  <td><%= Drawdown.get_contract_date(drawdown.contract_date) %></td>
                  <td><%= Drawdown.get_position(drawdown.position) %></td>
                  <td><%= num_currency(drawdown.salary) %></td>
                  <td><%= num_currency(drawdown.amount) %></td>
                  <td><%= Drawdown.get_amount_time(drawdown.amount_time) %></td>
                  <td><%= drawdown.purpose %></td>
                  <td><%= drawdown.user.name %></td>
                  <td><%= link_to 'Detail', admin_drawdown_path(drawdown) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>

