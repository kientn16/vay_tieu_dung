<div class="panel panel-default">
  <div class="panel-heading">
  </div>

  <div class="panel-body">
    <%= form_for @admin, url: {action: "create"} do |f| %>
        <% if @admin.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this content from being saved:</h2>

              <ul>
                <% @admin.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <div class="field">
            <%= f.label :username %><br>
            <%= f.text_field :username, :class => 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password,:class => 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :status %><br>
            <%= f.select(:status, [['Active',1],['Inactive',0]], {include_blank: 'Status'}, { :class => 'form-control'}) %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit 'Submit',:class => 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>


