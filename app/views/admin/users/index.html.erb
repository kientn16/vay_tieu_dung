<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listing Users</h1>
  </div>
  <div class="clear"></div>
  <%= render 'includes/flash_msg' %>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="panel panel-default">
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>FullName</th>
              <th>Email</th>
              <th>Nam Sinh</th>
              <th>Dia chi</th>
              <th>Passport</th>
              <th>So Dien thoai</th>
              <th>Gioi Tinh</th>
              <th>Hon Nhan</th>
              <th>CMT/Passport</th>
              <th>Status</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.birthday %></td>
                  <td><%= user.address %></td>
                  <td><%= user.passport %></td>
                  <td><%= user.phone %></td>
                  <td><%= user.gender %></td>
                  <td><%= user.marriage %></td>
                  <td><%= user.status %></td>
                  <td><% if user.media_id != nil %> <a href="<%= Medium.find(user.media_id).path.url(:original, false) %>" download>Download</a><% end %></td>
                  <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>

